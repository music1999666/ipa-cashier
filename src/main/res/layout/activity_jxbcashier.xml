<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JXBCashierActivity"
    android:background="@color/black">

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1" />
    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:paddingTop="10sp"
        android:paddingBottom="5sp"
        android:text="经销宝收银台"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/customer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="5sp"
        android:text="永兴旺超市"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_title" />

    <TextView
        android:id="@+id/cash_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10sp"
        android:paddingTop="5sp"
        android:text="￥2000.00"
        android:textColor="#FF6600"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/customer_name" />

    <ImageView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/mpos_gray_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cash_total" />

    <TextView
        android:id="@+id/confirm_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="10sp"
        android:text="请与客户确认支付方式"
        android:textColor="@color/black"
        android:background="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1" />

    <ImageView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/mpos_gray_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirm_method" />


    <TextView
        android:id="@+id/aggregate"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"

        android:paddingVertical="10sp"

        android:text="扫码支付"
        android:textColor="#FF6600"

        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2" />

    <ImageView
        android:id="@+id/recommend"

        android:layout_width="30sp"

        android:layout_height="15sp"
        android:background="@drawable/recommend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/line2" />

    <TextView
        android:id="@+id/pay_cash"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:paddingVertical="10sp"
        android:gravity="center"

        android:text="现金支付"

        android:background="@color/gray"
        android:textColor="@color/black"

        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/line2" />

    <ImageView
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/mpos_gray_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aggregate" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/qr_layout"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/guideline_qr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line3">


        <ImageView
            android:id="@+id/qr"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_marginBottom="10sp"
            app:layout_constraintBottom_toTopOf="@id/qr_ali"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bg_shape_display_view_top" />

        <TextView
            android:id="@+id/load_qr_hint"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_marginBottom="10sp"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:paddingTop="@dimen/public_space_value_10"
            android:text="正在加载收款码......"
            android:textColor="#FF6600"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/qr_ali"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tick_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="2sp"
            android:textColor="@color/gray"
            android:background="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/qr_wx" />

        <ImageView
            android:id="@+id/qr_ali"
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/qr_wx"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ali_pay" />

        <ImageView
            android:id="@+id/qr_wx"
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/qr_cloud"
            app:layout_constraintStart_toEndOf="@id/qr_ali"
            app:srcCompat="@drawable/wx_pay" />

        <ImageView
            android:id="@+id/qr_cloud"
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/qr_wx"
            app:srcCompat="@drawable/quick_pay" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>