<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/widget38"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/head_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dip"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:typeface="monospace"
                tools:text=" " />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear_center1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="20dip"
            android:layout_marginRight="10dip"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/public_space_value_40"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dip"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dip">

                <TextView
                    android:id="@+id/tv_amount_text"
                    android:layout_width="200dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="付款金额"
                    android:textColor="@color/black"
                    android:textSize="18sp"
/>

                <TextView
                    android:id="@+id/amount_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@+id/tv_amount_text"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="@dimen/public_space_value_10"
                    android:singleLine="true"
                    android:text="￥0.01"
                    android:textColor="#F44336"
                    android:textSize="18sp"
/>

            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:background="@color/mpos_gray_line"
                android:visibility="gone" />


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/public_space_value_40"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip">

                <TextView
                    android:id="@+id/tv_choose_pay_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#EBEBEB"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="选择支付方式"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:background="@color/mpos_gray_line" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/public_space_value_40"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dip"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dip">

                <ImageView
                    android:id="@+id/img_wx_pay"
                    android:layout_width="@dimen/public_space_value_40"
                    android:layout_height="@dimen/public_space_value_40"
                    android:background="@drawable/wx_pay"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/weixin_pay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@+id/img_wx_pay"
                    android:background="@null"
                    android:gravity="center_horizontal|center_vertical"
                    android:singleLine="true"
                    android:text="微信支付"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </RelativeLayout>


            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:background="@color/mpos_gray_line" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/public_space_value_40"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dip"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dip">

                <ImageView
                    android:id="@+id/img_ali_pay"
                    android:layout_width="@dimen/public_space_value_40"
                    android:layout_height="@dimen/public_space_value_40"
                    android:background="@drawable/ali_pay"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/ali_pay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@+id/img_ali_pay"
                    android:background="@null"
                    android:gravity="center_horizontal|center_vertical"
                    android:singleLine="true"
                    android:text="支付宝"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
            </RelativeLayout>


            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:background="@color/mpos_gray_line" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/public_space_value_40"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dip"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dip">

                <ImageView
                    android:id="@+id/img_cloud_quicki_pay"
                    android:layout_width="@dimen/public_space_value_40"
                    android:layout_height="@dimen/public_space_value_40"
                    android:background="@drawable/quick_pay"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/cloud_quicki_pay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@+id/img_cloud_quicki_pay"
                    android:background="@null"
                    android:gravity="center_horizontal|center_vertical"
                    android:singleLine="true"
                    android:text="云闪付"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:background="@color/mpos_gray_line" />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/public_space_value_40"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dip"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dip">
                <ImageView
                    android:id="@+id/img_c2b"
                    android:layout_width="@dimen/public_space_value_40"
                    android:layout_height="@dimen/public_space_value_40"
                    android:background="@color/white"
                    android:gravity="center_vertical" />
                <TextView
                    android:id="@+id/c2b_qr_pay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:layout_toRightOf="@id/img_c2b"
                    android:gravity="center_horizontal|center_vertical"
                    android:singleLine="true"
                    android:text="聚合码"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:background="@color/mpos_gray_line" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
